@model EditBlogViewModel

@{
  ViewData["Title"] = "Edit Blog";
}

<h1>@Model.Blog.Name</h1>
<form method="post" action="/admin/blog/update" id="formUpdatePost">
  <input id="id" name="id" type="hidden" value='@Model.Blog.Id' />

  <div class="row">
    <div class="col">
      <input type="submit" value="Save changes" class="btn btn-primary" />
    </div>
  </div>

  <div class="clearfix"><br /></div>

  <div class="row">
    <div class="col">
      <label for="">name(view file name):</label>
      <span name="name">@Model.Blog.Name</span>
    </div>
    <div class="col">
      <label for="postCategory">category:</label>
      <select class="form-control" name="category">
        @foreach (var item in @Model.Categories)
        {
          @if (@item.Name == @Model.Blog.Category)
          {
            <option value="@item.Name" selected>@item.Name</option>
          }
          else
          {
            <option value="@item.Name">@item.Name</option>
          }
        })
      </select>
    </div>
    <div class="col">
      <label>header:</label>
      <br />
      <input type="text" class="form-control" name="header" value='@Model.Blog.Header' placeholder="header" />
    </div>
    <div class="col">
      <label for="ispublished">publish post?:</label>
      <select class="form-control" name="ispublished">
        @if (@Model.Blog.Ispublished)
        {
          <option value="1" selected>Yes</option>
          <option value="0">No</option>
        }
        else
        {
          <option value="1">Yes</option>
          <option value="0" selected>No</option>
        }
      </select>
    </div>
  </div>

  <div class="clearfix"><br /></div>

  <div class="row">
    <div class="col">
      <label>Description:</label>
      <textarea type="text" class="form-control" name="description"
        placeholder="description">@Model.Blog.Description</textarea>
    </div>
  </div>

  <div class="clearfix"><br /></div>

  <div class="row">
    <div class="col">
      <label>Body:</label>
      <textarea type="text" class="form-control trumbowyg" name="body" rows="25"
        placeholder="post content">@Model.Blog.Body</textarea>
    </div>
  </div>
</form>