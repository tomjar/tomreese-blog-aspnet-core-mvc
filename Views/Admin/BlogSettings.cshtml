@model BlogsSettingsViewModel
    
    <h1 class="text-white">@Model.title</h1>
    <form method="post" action="/admin/settings" id="formUpdateSettings">
      <div class="row">
        <div class="col">
          <input type="submit" value="Save changes" class="btn btn-primary" />
        </div>
      </div>

      <div class="clearfix"><br /></div>

      <div class="row">
        <div class="col">
          <label for="archiveView" class="text-white">archive view:</label>
          <select class="form-control bg-light" name="archiveView">
            @Model.archive_view_categories.forEach(function(item){
              if (item.name === Model.archive_view){
                <option value="@item.value" selected>@item.name</option>
              }else{
                <option value="@item.value">@item.name</option>
              }
            })
          </select>
        </div>
      </div>

      <div class="clearfix"><br /></div>

      <div class="row">
        <div class="col bg-light h-100">
          <label>about section:</label>
          <textarea type="text" class="form-control trumbowyg" name="about" rows="25" placeholder="The text that is rendered on the about page.">@Model.about_section</textarea>
        </div>
      </div>

      <div class="clearfix"><br /></div>
    </form>

        <script>
      $( document ).ready(function() {
        $('.trumbowyg').trumbowyg({
          tagsToRemove: ['script', 'style']
        });
      });
    </script>