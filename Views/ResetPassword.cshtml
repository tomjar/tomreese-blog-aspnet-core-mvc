@model ResetPasswordViewModel

<form method="post" action="/resetpassword">
  <div class="d-flex flex-column text-white form-signin justify-content-center">
    <div class="p-2">
      <h3 class="text-white">Reset Password</h3>
    </div>
    <div class="p-2">
      <input type="input" class="form-control" name="username" value="" placeholder="username" />
    </div>
    <div class="p-2">
      <input type="password" class="form-control" name="password" value="" placeholder="password" />
    </div>
    <div class="p-2">
      <input type="password" class="form-control" name="cnfpassword" value="" placeholder="password" />
    </div>
    <div class="p-2"><input type="submit" value="Login" class="btn btn-primary" /></div>
  </div>
</form>